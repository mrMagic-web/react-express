// Import all partials
@require '_variables.styl'
@require '_selector.styl'
@require './_*.styl'
    
.wrapper
  max-width 1280px
  margin 0 auto
  position relative
  width 100%
  padding 2rem
  background white

svg
  stroke black
  fill black
  display: block;
  position: absolute;

.icon-close
  position absolute
  z-index 2
  width 20px
  top 15px
  right 15px
  cursor pointer
  transform rotate(0deg)
  transform-origin 10px 10px
  transition all .2s
  &:hover
    transform rotate(90deg)