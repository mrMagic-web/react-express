.products
  display flex
  flex-wrap wrap
  justify-content center
  ul
    list-style-type none 
  .colors
    position absolute
    bottom 15px
    right 15px
    display flex  
  .product-name
    margin 10px 0
  .description
    margin-bottom 10px 
    p
      margin-top 0
      font-size 1.25rem    
    h4
      font-size 1.75rem    
  .product
    text-align left
    padding 15px
    margin 15px
    flex 1 1 267px
    max-width 267px
    display flex
    position relative
    flex-direction column
    border 1px solid gray-lighter
    img
      width 200px
      margin auto
      display block    

  .expand
    display flex
    width 100%
    position relative
    flex-wrap wrap
    flex-direction row
    .icon-close
      position absolute
      z-index 2
      width 20px
      top 15px
      right 15px
    
    .image 
      width 40%
      padding-right 30px
    .colors
      top 15px
      right 15px      
    .description
      width 60%
      display flex
      flex-direction column
      justify-content center
      button
        margin-right 10px
      .dimensions 
        max-width 300px
        display flex
        justify-content space-between
        font-size 1.2rem
        margin-bottom: 25px;
        li 
          width 90px
          text-align center
          border-right 1px solid gray-lighter
          &:last-of-type
            border-right none            
          b
            margin-bottom 0
            display block
      h4
        position relative
        .colors
          position absolute
          right 0
          top 0
    img
      height auto 
      width 100%
      max-height 380px    
    

.order-buttons
  margin-top auto 

button, input[type=submit]
  text-transform uppercase
  background none
  border 1px solid black
  font-weight 600
  font-size 1.5rem
  font-family 'OpenSans-Bold'
  transition all 0.2s
  position relative
  z-index 2
  
  &.disabled
    color gray-light
    background white
    border-color gray-light
    cursor not-allowed
    &:hover
      color gray-light
    &:after
      display none
  &:after
    content ''
    z-index -1
    display block
    background black
    position absolute
    width 100%
    height 0%
    left 0
    top 0
    transition all 0.2s
  &:hover
    color white
    outline 0
    &:after
      height 100%
  // variants
  &.warning
    &:after
      background red
  &.success
    &:after
      background green

.gray, .white 
  width 32px 
  height 32px
  border 1px solid lightgray
  display flex
  flex-direction row 
  margin 0 1px
  &:hover
    -webkit-box-shadow 0px 0px 2px 0px rgba(50, 50, 50, 0.5)
    -moz-box-shadow    0px 0px 2px 0px rgba(50, 50, 50, 0.5)
    box-shadow         0px 0px 2px 0px rgba(50, 50, 50, 0.5)

.gray 
  background-image url('http://www.fastpack.dk/wp-content/uploads/bag-gray.jpg')
